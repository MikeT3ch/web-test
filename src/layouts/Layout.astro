---
interface Props {
	title: string;

}

const { title } = Astro.props.frontmatter || Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="w-screen flex flex-col items-center p-4">
		<article class="prose xl:prose-sm lg:prose-lg">
			<slot />
		</article>
	</body>
</html>
